// ============================================================================
// VideoMode - Represents a video mode for a monitor
// ============================================================================
[ Class <VideoMode> Final Extends None
[ Public<>
    Property <width> Types Integer^;
    Property <height> Types Integer^;
    Property <redBits> Types Integer^;
    Property <greenBits> Types Integer^;
    Property <blueBits> Types Integer^;
    Property <refreshRate> Types Integer^;

    Constructor = default;

    Constructor Parameters (
        Parameter <w> Types Integer^,
        Parameter <h> Types Integer^,
        Parameter <red> Types Integer^,
        Parameter <green> Types Integer^,
        Parameter <blue> Types Integer^,
        Parameter <refresh> Types Integer^
    ) -> {
        Set this.width = w;
        Set this.height = h;
        Set this.redBits = red;
        Set this.greenBits = green;
        Set this.blueBits = blue;
        Set this.refreshRate = refresh;
    }

    Method <getWidth> Returns Integer^ Parameters () -> { Return width; }
    Method <getHeight> Returns Integer^ Parameters () -> { Return height; }
    Method <getRedBits> Returns Integer^ Parameters () -> { Return redBits; }
    Method <getGreenBits> Returns Integer^ Parameters () -> { Return greenBits; }
    Method <getBlueBits> Returns Integer^ Parameters () -> { Return blueBits; }
    Method <getRefreshRate> Returns Integer^ Parameters () -> { Return refreshRate; }

    Method <toString> Returns String^ Parameters () -> {
        Return String::Constructor("")
            .append(width.toString())
            .append(String::Constructor("x"))
            .append(height.toString())
            .append(String::Constructor(" @ "))
            .append(refreshRate.toString())
            .append(String::Constructor("Hz"));
    }
]
]

