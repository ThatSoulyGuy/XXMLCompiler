// ============================================================================
// GamepadState - Represents state of a gamepad controller
// ============================================================================
[ Class <GamepadState> Final Extends None
[ Public<>
    // 15 buttons (GLFW_GAMEPAD_BUTTON_LAST + 1)
    Property <button0> Types Integer^;
    Property <button1> Types Integer^;
    Property <button2> Types Integer^;
    Property <button3> Types Integer^;
    Property <button4> Types Integer^;
    Property <button5> Types Integer^;
    Property <button6> Types Integer^;
    Property <button7> Types Integer^;
    Property <button8> Types Integer^;
    Property <button9> Types Integer^;
    Property <button10> Types Integer^;
    Property <button11> Types Integer^;
    Property <button12> Types Integer^;
    Property <button13> Types Integer^;
    Property <button14> Types Integer^;

    // 6 axes (GLFW_GAMEPAD_AXIS_LAST + 1)
    Property <axis0> Types NativeType<"float">^;
    Property <axis1> Types NativeType<"float">^;
    Property <axis2> Types NativeType<"float">^;
    Property <axis3> Types NativeType<"float">^;
    Property <axis4> Types NativeType<"float">^;
    Property <axis5> Types NativeType<"float">^;

    Constructor = default;

    // Check if a button is pressed
    Method <isButtonPressed> Returns Bool^ Parameters (
        Parameter <button> Types GamepadButton^
