#import Language::Core;

[ Entrypoint
    {
        // Use Integer comparisons to create Bool values
        Instantiate Integer^ As <one> = Integer::Constructor(1);
        Instantiate Integer^ As <two> = Integer::Constructor(2);
        Instantiate Integer^ As <three> = Integer::Constructor(3);

        // 1 < 2 is true, 2 < 1 is false
        Instantiate Bool^ As <t> = one.lessThan(two);
        Instantiate Bool^ As <f> = two.lessThan(one);

        // Test || operator: false || true should be true
        If (f || t) -> {
            Run Console::printLine(String::Constructor("OR test passed: false || true = true"));
        }

        // Test with false || false
        If (f || f) -> {
            Run Console::printLine(String::Constructor("This should NOT print"));
        }

        // Test with true || false
        If (t || f) -> {
            Run Console::printLine(String::Constructor("OR test 2 passed: true || false = true"));
        }

        Run Console::printLine(String::Constructor("Done"));
    }
]
