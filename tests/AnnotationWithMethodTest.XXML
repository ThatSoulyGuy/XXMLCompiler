// Annotation With Method Test
#import Language::Core;

// Define annotation with Retain
[ Annotation <Marker> Allows (AnnotationAllow::Classes) Retain ]

// Test class with method
@Marker
[ Class <TestClass> Final Extends None
    [ Public <>
        Property <value> Types Integer^;
        Constructor = default;

        Method <getValue> Returns Integer^ Parameters () ->
        {
            Return Integer::Constructor(42);
        }
    ]
]

[ Entrypoint
    {
        Instantiate TestClass^ As <obj> = TestClass::Constructor();
        Run Console::printLine(String::Constructor("Value: "));
        Run Console::printLine(obj.getValue().toString());
        Exit(0);
    }
]
