// Comprehensive XXML Test - Final Version

[ Entrypoint {
	Run System::Console::printLine(String::Constructor("=== XXML COMPREHENSIVE TEST SUITE ==="));
	Run System::Console::printLine(String::Constructor(""));

	// Test 1: Integer Operations
	Run System::Console::printLine(String::Constructor("--- Test 1: Integer Operations ---"));
	Instantiate Integer^ As <num1> = Integer::Constructor(42);
	Instantiate Integer^ As <num2> = Integer::Constructor(10);
	Instantiate Integer^ As <sum> = num1.add(num2);
	Instantiate Integer^ As <diff> = num1.subtract(num2);
	Instantiate Integer^ As <product> = num1.multiply(num2);
	Instantiate Integer^ As <quotient> = num1.divide(num2);
	Run System::Console::printLine(String::Constructor("Integer arithmetic: 42+10, 42-10, 42*10, 42/10"));
	
	Instantiate Bool^ As <isEqual> = num1.equals(num2);
	Instantiate Bool^ As <isLess> = num2.lessThan(num1);
	Instantiate Bool^ As <isGreater> = num1.greaterThan(num2);
	Instantiate Bool^ As <isLessEq> = num2.lessOrEqual(num1);
	Instantiate Bool^ As <isGreaterEq> = num1.greaterOrEqual(num2);
	Run System::Console::printLine(String::Constructor("Integer comparisons: equals, <, >, <=, >="));
	Run System::Console::printLine(String::Constructor("✓ PASSED: Integer Operations"));
	Run System::Console::printLine(String::Constructor(""));

	// Test 2: Boolean Operations
	Run System::Console::printLine(String::Constructor("--- Test 2: Boolean Operations ---"));
	Instantiate Bool^ As <flag1> = Bool::Constructor(true);
	Instantiate Bool^ As <flag2> = Bool::Constructor(false);
	Instantiate Bool^ As <andResult> = flag1.logicalAnd(flag2);
	Instantiate Bool^ As <orResult> = flag1.logicalOr(flag2);
	Instantiate Bool^ As <notResult> = flag1.logicalNot();
	Instantiate Bool^ As <xorResult> = flag1.logicalXor(flag2);
	Run System::Console::printLine(String::Constructor("Boolean logic: AND, OR, NOT, XOR"));
	Run System::Console::printLine(String::Constructor("✓ PASSED: Boolean Operations"));
	Run System::Console::printLine(String::Constructor(""));

	// Test 3: String Operations
	Run System::Console::printLine(String::Constructor("--- Test 3: String Operations ---"));
	Instantiate String^ As <str1> = String::Constructor("Hello");
	Instantiate String^ As <str2> = String::Constructor(" World");
	Instantiate String^ As <combined> = str1.append(str2);
	Instantiate Integer^ As <strLen> = combined.length();
	Instantiate Bool^ As <isEmpty> = combined.isEmpty();
	Instantiate Bool^ As <strEquals> = str1.equals(str2);
	Run System::Console::printLine(String::Constructor("String ops: append, length, isEmpty, equals"));
	
	Instantiate String^ As <copy> = combined.copy();
	Instantiate Bool^ As <copyEquals> = combined.equals(copy);
	Run System::Console::printLine(String::Constructor("String copy and comparison completed"));
	Run System::Console::printLine(String::Constructor("✓ PASSED: String Operations"));
	Run System::Console::printLine(String::Constructor(""));

	// Test 4: Control Flow - If Statement
	Run System::Console::printLine(String::Constructor("--- Test 4: If Statements ---"));
	Instantiate Integer^ As <testVal> = Integer::Constructor(50);
	Instantiate Integer^ As <threshold> = Integer::Constructor(25);
	Instantiate Bool^ As <condition> = testVal.greaterThan(threshold);
	
	If (condition) -> {
		Run System::Console::printLine(String::Constructor("If condition evaluated: 50 > 25 is TRUE"));
	}
	Run System::Console::printLine(String::Constructor("✓ PASSED: If Statements"));
	Run System::Console::printLine(String::Constructor(""));

	// Test 5: Control Flow - While Loops
	Run System::Console::printLine(String::Constructor("--- Test 5: While Loops ---"));
	Instantiate Integer^ As <counter> = Integer::Constructor(0);
	Instantiate Integer^ As <loopLimit> = Integer::Constructor(5);
	Instantiate Integer^ As <one> = Integer::Constructor(1);
	
	While (counter.lessThan(loopLimit)) -> {
		Run counter.add(one);
	}
	Run System::Console::printLine(String::Constructor("While loop: counted from 0 to 5"));
	Run System::Console::printLine(String::Constructor("✓ PASSED: While Loops"));
	Run System::Console::printLine(String::Constructor(""));

	// Test 6: Ownership Semantics
	Run System::Console::printLine(String::Constructor("--- Test 6: Ownership (^, &) ---"));
	Instantiate Integer^ As <owned1> = Integer::Constructor(100);
	Instantiate Integer^ As <owned2> = Integer::Constructor(200);
	Run System::Console::printLine(String::Constructor("Created owned values: 100, 200"));
	
	Instantiate Bool^ As <compareResult> = owned1.equals(owned2);
	Run System::Console::printLine(String::Constructor("Borrowed comparison (no move)"));
	Run System::Console::printLine(String::Constructor("✓ PASSED: Ownership"));
	Run System::Console::printLine(String::Constructor(""));

	// Test 7: Edge Cases
	Run System::Console::printLine(String::Constructor("--- Test 7: Edge Cases ---"));
	Instantiate Integer^ As <zero> = Integer::Constructor(0);
	Instantiate Integer^ As <anyNum> = Integer::Constructor(42);
	Instantiate Integer^ As <zeroSum> = zero.add(anyNum);
	Run System::Console::printLine(String::Constructor("Zero arithmetic: 0 + 42 = 42"));
	
	Instantiate Integer^ As <negative> = Integer::Constructor(-42);
	Instantiate Integer^ As <negSum> = negative.add(anyNum);
	Run System::Console::printLine(String::Constructor("Negative values: -42 + 42 = 0"));
	
	Instantiate String^ As <emptyStr> = String::Constructor("");
	Instantiate Bool^ As <isEmptyStr> = emptyStr.isEmpty();
	Instantiate Integer^ As <emptyLen> = emptyStr.length();
	Run System::Console::printLine(String::Constructor("Empty string: isEmpty() and length()"));
	Run System::Console::printLine(String::Constructor("✓ PASSED: Edge Cases"));
	Run System::Console::printLine(String::Constructor(""));

	// Test 8: Nested Operations
	Run System::Console::printLine(String::Constructor("--- Test 8: Nested Operations ---"));
	Instantiate Integer^ As <n1> = Integer::Constructor(10);
	Instantiate Integer^ As <n2> = Integer::Constructor(20);
	Instantiate Integer^ As <n3> = Integer::Constructor(2);
	Instantiate Integer^ As <nSum> = n1.add(n2);
	Instantiate Integer^ As <nResult> = nSum.multiply(n3);
	Run System::Console::printLine(String::Constructor("Nested arithmetic: (10 + 20) * 2 = 60"));
	
	Instantiate Integer^ As <na> = Integer::Constructor(5);
	Instantiate Integer^ As <nb> = Integer::Constructor(15);
	Instantiate Integer^ As <nc> = Integer::Constructor(25);
	Instantiate Bool^ As <cmp1> = na.lessThan(nb);
	Instantiate Bool^ As <cmp2> = nb.lessThan(nc);
	Instantiate Bool^ As <cmpRes> = cmp1.logicalAnd(cmp2);
	Run System::Console::printLine(String::Constructor("Nested comparisons: (5<15) AND (15<25)"));
	
	Instantiate String^ As <s1> = String::Constructor("A");
	Instantiate String^ As <s2> = String::Constructor("B");
	Instantiate String^ As <s3> = String::Constructor("C");
	Instantiate String^ As <s12> = s1.append(s2);
	Instantiate String^ As <s123> = s12.append(s3);
	Run System::Console::printLine(String::Constructor("Nested strings: A + B + C = ABC"));
	Run System::Console::printLine(String::Constructor("✓ PASSED: Nested Operations"));
	Run System::Console::printLine(String::Constructor(""));

