{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "XXML",
  "scopeName": "source.xxml",
  "patterns": [
    { "include": "#comments" },
    { "include": "#preprocessor" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#declarations" },
    { "include": "#annotations" },
    { "include": "#types" },
    { "include": "#operators" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.xxml",
          "match": "//.*$"
        },
        {
          "name": "comment.block.xxml",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "preprocessor": {
      "patterns": [
        {
          "name": "meta.preprocessor.import.xxml",
          "match": "^\\s*(#import)\\s+([\\w:]+)",
          "captures": {
            "1": { "name": "keyword.control.import.xxml" },
            "2": { "name": "entity.name.namespace.xxml" }
          }
        },
        {
          "name": "meta.preprocessor.xxml",
          "match": "^\\s*(#\\w+)",
          "captures": {
            "1": { "name": "keyword.control.preprocessor.xxml" }
          }
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.xxml",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.xxml",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.xxml",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.xxml",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.xxml",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.float.xxml",
          "match": "\\b\\d+\\.\\d+([eE][+-]?\\d+)?\\b"
        },
        {
          "name": "constant.numeric.integer.xxml",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.xxml",
          "match": "\\b(If|Else|While|For|In|Return|Exit|Break|Continue|Match|Case|Default)\\b"
        },
        {
          "name": "keyword.other.xxml",
          "match": "\\b(Class|Struct|Interface|Trait|Annotation|Enum|Entrypoint|Namespace)\\b"
        },
        {
          "name": "keyword.declaration.xxml",
          "match": "\\b(Method|Property|Constructor|Destructor|Operator)\\b"
        },
        {
          "name": "keyword.statement.xxml",
          "match": "\\b(Instantiate|Run|Set|As|Do|Invoke|Call)\\b"
        },
        {
          "name": "keyword.modifier.xxml",
          "match": "\\b(Public|Private|Protected|Static|Final|Abstract|Virtual|Override|Const|Mutable)\\b"
        },
        {
          "name": "keyword.type.xxml",
          "match": "\\b(Types|Returns|Parameters|Parameter|Extends|Implements|Allows)\\b"
        },
        {
          "name": "constant.language.xxml",
          "match": "\\b(true|false|null|None|Self)\\b"
        },
        {
          "name": "keyword.operator.new.xxml",
          "match": "\\b(new|delete)\\b"
        }
      ]
    },
    "declarations": {
      "patterns": [
        {
          "name": "meta.class.xxml",
          "match": "\\[\\s*(Class|Struct|Interface|Trait|Enum)\\s*<([^>]+)>",
          "captures": {
            "1": { "name": "keyword.other.xxml" },
            "2": { "name": "entity.name.type.class.xxml" }
          }
        },
        {
          "name": "meta.method.xxml",
          "match": "(Method|Constructor|Destructor)\\s*<([^>]+)>",
          "captures": {
            "1": { "name": "keyword.declaration.xxml" },
            "2": { "name": "entity.name.function.xxml" }
          }
        },
        {
          "name": "meta.property.xxml",
          "match": "(Property)\\s*<([^>]+)>",
          "captures": {
            "1": { "name": "keyword.declaration.xxml" },
            "2": { "name": "variable.other.property.xxml" }
          }
        },
        {
          "name": "meta.parameter.xxml",
          "match": "(Parameter)\\s*<([^>]+)>",
          "captures": {
            "1": { "name": "keyword.type.xxml" },
            "2": { "name": "variable.parameter.xxml" }
          }
        },
        {
          "name": "meta.variable.xxml",
          "match": "(Instantiate)\\s+([\\w^&%]+)\\s+(As)\\s*<([^>]+)>",
          "captures": {
            "1": { "name": "keyword.statement.xxml" },
            "2": { "name": "entity.name.type.xxml" },
            "3": { "name": "keyword.statement.xxml" },
            "4": { "name": "variable.other.local.xxml" }
          }
        }
      ]
    },
    "annotations": {
      "patterns": [
        {
          "name": "meta.annotation.xxml",
          "match": "@(\\w+)(\\([^)]*\\))?",
          "captures": {
            "0": { "name": "meta.annotation.xxml" },
            "1": { "name": "entity.name.function.decorator.xxml" }
          }
        },
        {
          "name": "storage.modifier.annotation.xxml",
          "match": "\\b(Annotate)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "entity.name.type.xxml",
          "match": "\\b(Integer|Float|Double|Bool|String|Char|Void|Any|Object|Array|List|HashMap|Set)\\b"
        },
        {
          "name": "storage.type.native.xxml",
          "match": "\\b(NativeType)\\s*<\"([^\"]+)\">"
        },
        {
          "name": "keyword.operator.ownership.owned.xxml",
          "match": "\\^"
        },
        {
          "name": "keyword.operator.ownership.reference.xxml",
          "match": "&(?!&)"
        },
        {
          "name": "keyword.operator.ownership.copy.xxml",
          "match": "%"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.xxml",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.xxml",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.arithmetic.xxml",
          "match": "(\\+|-|\\*|/|%)"
        },
        {
          "name": "keyword.operator.assignment.xxml",
          "match": "(=)"
        },
        {
          "name": "keyword.operator.access.xxml",
          "match": "(::|\\.)"
        },
        {
          "name": "keyword.operator.arrow.xxml",
          "match": "(->)"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "entity.name.function.call.xxml",
          "match": "\\b([A-Z]\\w*)\\s*::\\s*(\\w+)",
          "captures": {
            "1": { "name": "entity.name.type.xxml" },
            "2": { "name": "entity.name.function.xxml" }
          }
        },
        {
          "name": "variable.other.xxml",
          "match": "\\b[a-z_]\\w*\\b"
        },
        {
          "name": "entity.name.type.xxml",
          "match": "\\b[A-Z]\\w*\\b"
        }
      ]
    }
  }
}
