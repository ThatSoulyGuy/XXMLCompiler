{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "XXML",
  "scopeName": "source.xxml",
  "patterns": [
    { "include": "#comments" },
    { "include": "#preprocessor" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#block-declarations" },
    { "include": "#member-declarations" },
    { "include": "#statements" },
    { "include": "#keywords" },
    { "include": "#native-type" },
    { "include": "#generic-type" },
    { "include": "#template-instantiation" },
    { "include": "#type-with-ownership" },
    { "include": "#operators" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.xxml",
          "match": "//.*$"
        },
        {
          "name": "comment.block.xxml",
          "begin": "/\\*",
          "end": "\\*/",
          "captures": {
            "0": { "name": "punctuation.definition.comment.xxml" }
          }
        }
      ]
    },
    "preprocessor": {
      "patterns": [
        {
          "name": "meta.preprocessor.import.xxml",
          "match": "^\\s*(#import)\\s+([\\w:]+)\\s*;?",
          "captures": {
            "1": { "name": "keyword.control.import.xxml" },
            "2": { "name": "entity.name.namespace.xxml" }
          }
        },
        {
          "name": "meta.preprocessor.xxml",
          "match": "^\\s*(#\\w+)",
          "captures": {
            "1": { "name": "keyword.control.preprocessor.xxml" }
          }
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.xxml",
          "begin": "\"",
          "end": "\"",
          "beginCaptures": { "0": { "name": "punctuation.definition.string.begin.xxml" } },
          "endCaptures": { "0": { "name": "punctuation.definition.string.end.xxml" } },
          "patterns": [
            {
              "name": "constant.character.escape.xxml",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.xxml",
          "begin": "'",
          "end": "'",
          "beginCaptures": { "0": { "name": "punctuation.definition.string.begin.xxml" } },
          "endCaptures": { "0": { "name": "punctuation.definition.string.end.xxml" } },
          "patterns": [
            {
              "name": "constant.character.escape.xxml",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.xxml",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.float.xxml",
          "match": "\\b\\d+\\.\\d+([eE][+-]?\\d+)?\\b"
        },
        {
          "name": "constant.numeric.integer.xxml",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "block-declarations": {
      "patterns": [
        {
          "comment": "Namespace declaration: [ Namespace <Name>",
          "match": "(\\[)\\s*(Namespace)\\s*<([^>]+)>",
          "captures": {
            "1": { "name": "punctuation.section.block.begin.xxml" },
            "2": { "name": "keyword.declaration.namespace.xxml" },
            "3": { "name": "entity.name.namespace.xxml" }
          }
        },
        {
          "comment": "Class/Struct/Interface/Trait/Enum declaration",
          "match": "(\\[)\\s*(Class|Struct|Interface|Trait|Enum)\\s*<([^>]+)>",
          "captures": {
            "1": { "name": "punctuation.section.block.begin.xxml" },
            "2": { "name": "keyword.declaration.type.xxml" },
            "3": { "name": "entity.name.type.class.xxml" }
          }
        },
        {
          "comment": "Annotation declaration",
          "match": "(\\[)\\s*(Annotation)\\s*<([^>]+)>",
          "captures": {
            "1": { "name": "punctuation.section.block.begin.xxml" },
            "2": { "name": "keyword.declaration.annotation.xxml" },
            "3": { "name": "entity.name.type.annotation.xxml" }
          }
        },
        {
          "comment": "Entrypoint declaration (no angle brackets)",
          "match": "(\\[)\\s*(Entrypoint)\\b",
          "captures": {
            "1": { "name": "punctuation.section.block.begin.xxml" },
            "2": { "name": "keyword.declaration.entrypoint.xxml" }
          }
        },
        {
          "comment": "Access modifier sections: [ Public <> or [ Private <>",
          "match": "(\\[)\\s*(Public|Private|Protected)\\s*<>",
          "captures": {
            "1": { "name": "punctuation.section.block.begin.xxml" },
            "2": { "name": "storage.modifier.access.xxml" }
          }
        },
        {
          "comment": "Block end",
          "match": "\\]",
          "name": "punctuation.section.block.end.xxml"
        }
      ]
    },
    "member-declarations": {
      "patterns": [
        {
          "comment": "Method declaration: Method <name>",
          "match": "(Method)\\s*<([^>]+)>",
          "captures": {
            "1": { "name": "keyword.declaration.method.xxml" },
            "2": { "name": "entity.name.function.xxml" }
          }
        },
        {
          "comment": "Constructor keyword",
          "match": "\\b(Constructor)\\b(?!\\s*<)",
          "name": "keyword.declaration.constructor.xxml"
        },
        {
          "comment": "Destructor keyword",
          "match": "\\b(Destructor)\\b",
          "name": "keyword.declaration.destructor.xxml"
        },
        {
          "comment": "Property declaration: Property <name>",
          "match": "(Property)\\s*<([^>]+)>",
          "captures": {
            "1": { "name": "keyword.declaration.property.xxml" },
            "2": { "name": "variable.other.property.xxml" }
          }
        },
        {
          "comment": "Parameter declaration: Parameter <name>",
          "match": "(Parameter)\\s*<([^>]+)>",
          "captures": {
            "1": { "name": "keyword.other.parameter.xxml" },
            "2": { "name": "variable.parameter.xxml" }
          }
        },
        {
          "comment": "Operator overload: Operator <op>",
          "match": "(Operator)\\s*<([^>]+)>",
          "captures": {
            "1": { "name": "keyword.declaration.operator.xxml" },
            "2": { "name": "entity.name.function.operator.xxml" }
          }
        }
      ]
    },
    "statements": {
      "patterns": [
        {
          "comment": "Instantiate statement with variable name",
          "match": "(Instantiate)\\s+([\\w<>@:]+[\\^&%]?)\\s+(As)\\s*<([^>]+)>",
          "captures": {
            "1": { "name": "keyword.control.instantiate.xxml" },
            "2": { "name": "entity.name.type.xxml" },
            "3": { "name": "keyword.control.as.xxml" },
            "4": { "name": "variable.other.local.xxml" }
          }
        },
        {
          "comment": "For loop with iterator variable",
          "match": "(For)\\s*<([^>]+)>\\s+(In)\\b",
          "captures": {
            "1": { "name": "keyword.control.for.xxml" },
            "2": { "name": "variable.other.iterator.xxml" },
            "3": { "name": "keyword.control.in.xxml" }
          }
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "comment": "Control flow keywords",
          "name": "keyword.control.xxml",
          "match": "\\b(If|Else|While|For|In|Return|Exit|Break|Continue|Match|Case|Default)\\b"
        },
        {
          "comment": "Statement keywords",
          "name": "keyword.control.statement.xxml",
          "match": "\\b(Run|Set|Invoke|Call)\\b"
        },
        {
          "comment": "Type declaration modifiers",
          "name": "storage.modifier.xxml",
          "match": "\\b(Final|Abstract|Virtual|Override|Static|Const|Mutable|Compiletime)\\b"
        },
        {
          "comment": "Type annotation keywords",
          "name": "keyword.other.type.xxml",
          "match": "\\b(Types|Returns|Parameters|Extends|Implements|Allows|Do)\\b"
        },
        {
          "comment": "Constants and special values",
          "name": "constant.language.xxml",
          "match": "\\b(true|false|null|None|default)\\b"
        },
        {
          "comment": "Self/this reference",
          "name": "variable.language.xxml",
          "match": "\\b(Self|this)\\b"
        }
      ]
    },
    "native-type": {
      "patterns": [
        {
          "comment": "NativeType<\"...\"> syntax",
          "match": "(NativeType)\\s*<\\s*\"([^\"]+)\"\\s*>",
          "captures": {
            "1": { "name": "support.type.native.xxml" },
            "2": { "name": "string.quoted.double.native-type.xxml" }
          }
        }
      ]
    },
    "generic-type": {
      "patterns": [
        {
          "comment": "Generic type with nested generics: Type<A<B>, C>",
          "begin": "\\b([A-Z][a-zA-Z0-9_]*)\\s*(<)",
          "beginCaptures": {
            "1": { "name": "entity.name.type.generic.xxml" },
            "2": { "name": "punctuation.definition.typeparameters.begin.xxml" }
          },
          "end": "(>)",
          "endCaptures": {
            "1": { "name": "punctuation.definition.typeparameters.end.xxml" }
          },
          "patterns": [
            { "include": "#generic-type" },
            { "include": "#type-with-ownership" },
            {
              "match": ",",
              "name": "punctuation.separator.comma.xxml"
            },
            {
              "match": "\\b([A-Z][a-zA-Z0-9_]*)\\b",
              "name": "entity.name.type.parameter.xxml"
            }
          ]
        }
      ]
    },
    "template-instantiation": {
      "patterns": [
        {
          "comment": "Template instantiation: Type@Arg::Method",
          "match": "\\b([A-Z][a-zA-Z0-9_]*)@([A-Z][a-zA-Z0-9_]*)\\s*(::)\\s*([A-Za-z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "entity.name.type.xxml" },
            "2": { "name": "entity.name.type.parameter.xxml" },
            "3": { "name": "punctuation.accessor.xxml" },
            "4": { "name": "entity.name.function.xxml" }
          }
        }
      ]
    },
    "type-with-ownership": {
      "patterns": [
        {
          "comment": "Type with ownership modifier: Type^, Type&, Type%",
          "match": "\\b([A-Z][a-zA-Z0-9_]*)([\\^&%])",
          "captures": {
            "1": { "name": "entity.name.type.xxml" },
            "2": { "name": "keyword.operator.ownership.xxml" }
          }
        },
        {
          "comment": "Standalone ownership modifiers after >",
          "match": ">([\\^&%])",
          "captures": {
            "1": { "name": "keyword.operator.ownership.xxml" }
          }
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "comment": "Arrow operator",
          "name": "keyword.operator.arrow.xxml",
          "match": "->"
        },
        {
          "comment": "Scope resolution operator",
          "name": "punctuation.accessor.double-colon.xxml",
          "match": "::"
        },
        {
          "comment": "Comparison operators",
          "name": "keyword.operator.comparison.xxml",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "comment": "Logical operators",
          "name": "keyword.operator.logical.xxml",
          "match": "(&&|\\|\\||!)"
        },
        {
          "comment": "Arithmetic operators",
          "name": "keyword.operator.arithmetic.xxml",
          "match": "(\\+|-|\\*|/)"
        },
        {
          "comment": "Assignment operator",
          "name": "keyword.operator.assignment.xxml",
          "match": "="
        },
        {
          "comment": "Member access operator",
          "name": "punctuation.accessor.dot.xxml",
          "match": "\\."
        },
        {
          "comment": "Address-of operator",
          "name": "keyword.operator.address.xxml",
          "match": "&(?=[a-zA-Z_])"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "comment": "Static method/constructor call: ClassName::methodName",
          "match": "\\b([A-Z][a-zA-Z0-9_]*)\\s*(::)\\s*([A-Za-z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "entity.name.type.xxml" },
            "2": { "name": "punctuation.accessor.xxml" },
            "3": { "name": "entity.name.function.xxml" }
          }
        },
        {
          "comment": "Instance method call: object.method(",
          "match": "\\b([a-z_][a-zA-Z0-9_]*)\\s*\\.\\s*([a-z_][a-zA-Z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": { "name": "variable.other.xxml" },
            "2": { "name": "entity.name.function.xxml" }
          }
        },
        {
          "comment": "Type names (PascalCase)",
          "match": "\\b([A-Z][a-zA-Z0-9_]*)\\b",
          "name": "entity.name.type.xxml"
        },
        {
          "comment": "Variable and function names (camelCase/snake_case)",
          "match": "\\b([a-z_][a-zA-Z0-9_]*)\\b",
          "name": "variable.other.xxml"
        }
      ]
    }
  }
}
